
#include <stdio.h>
#include <string.h>

#define MAX_FILES 100
#define NAME_LEN 30

char directory[MAX_FILES][NAME_LEN];
int fileCount = 0;

void createFile() {
    if (fileCount >= MAX_FILES) {
        printf("Directory is full!\n");
        return;
    }

    char name[NAME_LEN];
    printf("Enter file name to create: ");
    scanf("%s", name);

    // Check for duplicate
    for (int i = 0; i < fileCount; i++) {
        if (strcmp(directory[i], name) == 0) {
            printf("File already exists!\n");
            return;
        }
    }

    strcpy(directory[fileCount], name);
    fileCount++;
    printf("File '%s' created successfully.\n", name);
}

void deleteFile() {
    char name[NAME_LEN];
    printf("Enter file name to delete: ");
    scanf("%s", name);

    for (int i = 0; i < fileCount; i++) {
        if (strcmp(directory[i], name) == 0) {
            for (int j = i; j < fileCount - 1; j++) {
                strcpy(directory[j], directory[j + 1]);
            }
            fileCount--;
            printf("File '%s' deleted successfully.\n", name);
            return;
        }
    }

    printf("File not found!\n");
}

void searchFile() {
    char name[NAME_LEN];
    printf("Enter file name to search: ");
    scanf("%s", name);

    for (int i = 0; i < fileCount; i++) {
        if (strcmp(directory[i], name) == 0) {
            printf("File '%s' found at position %d.\n", name, i + 1);
            return;
        }
    }

    printf("File not found!\n");
}

void displayFiles() {
    if (fileCount == 0) {
        printf("Directory is empty.\n");
        return;
    }

    printf("Files in directory:\n");
    for (int i = 0; i < fileCount; i++) {
        printf("%d. %s\n", i + 1, directory[i]);
    }
}

int main() {
    int choice;

    do {
        printf("\n--- Single-Level Directory ---\n");
        printf("1. Create File\n");
        printf("2. Delete File\n");
        printf("3. Search File\n");
        printf("4. Display Files\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1: createFile(); break;
            case 2: deleteFile(); break;
            case 3: searchFile(); break;
            case 4: displayFiles(); break;
            case 5: printf("Exiting...\n"); break;
            default: printf("Invalid choice!\n");
        }
    } while (choice != 5);

    return 0;
}
